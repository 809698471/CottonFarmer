<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.my.personalinformation.PersonalInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y499"
        android:background="@mipmap/bg_geren">

        <ImageView
            android:id="@+id/personalinformation_return"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/y44"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginTop="@dimen/y45"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y45"
            android:text="个人信息"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/personalinformation_personalimage"
            android:layout_width="@dimen/x158"
            android:layout_height="@dimen/y158"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y118"
            android:src="@mipmap/touxiang" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/personalinformation_essentialinformation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y30"
            android:background="#fff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x34"
                android:text="基本信息"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x24"
                android:src="@mipmap/back_1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/personalinformation_plantinginformation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y20"
            android:background="#fff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x34"
                android:text="种植信息"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x24"
                android:src="@mipmap/back_1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/personalinformation_proofofownership"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y20"
            android:background="#fff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x34"
                android:text="权属证明"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x24"
                android:src="@mipmap/back_1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/personalinformation_insurancepurchaserecord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y20"
            android:background="#fff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x34"
                android:text="保险购买记录（近3年）"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x24"
                android:src="@mipmap/back_1"  />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
