<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/color_dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/lightblue"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="下单时间：2018-03-11"
            android:textColor="@color/textview"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_year"
            android:text="12:00:00"
            android:textColor="@color/textview"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x24"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20">

        <ImageView
            android:id="@+id/iv_"
            android:layout_width="@dimen/x146"
            android:layout_height="@dimen/y222"
            android:layout_marginLeft="@dimen/x24"
            android:scaleType="fitXY"
            android:src="@mipmap/order_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@id/iv_"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ins_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="棉花种植险"
                android:textColor="@color/textview"
                android:textSize="@dimen/x36" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="单价：100元"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/tv_cotton_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="X50亩"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/x24" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="总金额：￥2000"
        android:textColor="@color/textview"
        android:textSize="@dimen/x30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_state"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_insurance_particulars_selected"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="预约成功"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_onsuccess"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/order_onsuccess" />

        <ImageView
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y60"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@id/iv_onsuccess"
            android:src="@mipmap/order_queren" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/color_dddddd" />
</LinearLayout>