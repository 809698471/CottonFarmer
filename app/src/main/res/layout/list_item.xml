<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y110"
    android:minHeight="?android:attr/listPreferredItemHeight"
   >


    <TextView
        android:id="@+id/weather_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x30"
        android:text="今天"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/weather_view1">

        <ImageView
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/icon_3" />

        <TextView
            android:id="@+id/weather_w_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扬沙转晴"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/weather_view1"
        android:layout_width="1dp"
        android:layout_height="@dimen/y30"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@mipmap/seg" />

    <TextView
        android:id="@+id/weather_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/weather_view1"
        android:text="2级风"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/weather_tmp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x90"
        android:text="31"
        android:textSize="15sp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x75"
        android:text="/"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/weather_tmp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:text="31°"
        android:textSize="15sp" />

</RelativeLayout>
