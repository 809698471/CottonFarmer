<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.7">

    <ImageView
        android:id="@+id/iv_news_detail_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/insurance_banner"
        android:transitionName="photos"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        tools:src="@mipmap/insurance_banner" />

    <TextView
        android:id="@+id/tv_tuijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center"
        android:text="为您推荐"
        android:textColor="@color/black1"
        android:textSize="@dimen/x36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/y159"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/y159"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x24"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>
</LinearLayout>